CC=g++
BASEDIR = ..
SDIR = $(BASEDIR)/src
SDIR_TEST = $(BASEDIR)/test
IDIR = $(BASEDIR)/include
ODIR=$(BASEDIR)/test/objects
BINDIR=$(BASEDIR)/test/bin
CFLAGS= -I$(IDIR) -fdiagnostics-color=never
MKDIR_P = mkdir -p

all: test_class2D

test_class: Parser.o PPCA.o class2D.o test_class2D.o 
	$(CC) $(CFLAGS) -o  $@ Parser.o PPCA.o class2D.o test_class2D.o

test_class2D.o: ../include/Parser.h
	$(CC) $(CFLAGS) -c -o $@ ./test_class2D.cpp

PPCA.o:	../include/PPCA.h
	$(CC) $(CFLAGS) -c -o $@ ../src/PPCA.cpp

class2D.o: ../include/class2D.h
	$(CC) $(CFLAGS) -c -o $@ ../src/class2D.cpp

Parser.o: ../include/Parser.h
	$(CC) $(CFLAGS) -c -o $@ ../src/Parser.cpp