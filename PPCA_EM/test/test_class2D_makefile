CC=g++
BASEDIR = ..
SDIR = $(BASEDIR)/src
SDIR_TEST = $(BASEDIR)/test
IDIR = $(BASEDIR)/include/
ODIR=$(BASEDIR)/test/objects
BINDIR=$(BASEDIR)/test/bin
CFLAGS= -I$(IDIR) -fdiagnostics-color=never -Wall -pedantic #-Wno-write-strings
LIBS = -lopencv_highgui -lopencv_core -lopencv_imgproc -lfftw3f -larmadillo
MKDIR_P = mkdir -p

_DEPS = Parser.h PPCA.h class2D.h
	DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ = Parser.o PPCA.o class2D.o 
	OBJECTS = $(patsubst %,$(ODIR)/%,$(_OBJ))

_OBJ_TEST = test_class2D.o
	OBJECTS_TEST = $(patsubst %,$(ODIR)/%,$(_OBJ_TEST))

_CPP =  Parser.cpp PPCA.cpp class2D.cpp
	SRC = $(patsubst %,$(SDIR)/%,$(_CPP))

_CPP_TEST = test_class2D.cpp
	SRC_TEST = $(patsubst %,$(SDIR_TEST)/%,$(_CPP_TEST))

all: test_class 

test_class: $(OBJECTS_TEST) $(OBJECTS) 
	$(CC) $(CFLAGS) $(LIBS) -o $@ $^
 
$(OBJECTS_TEST): $(SRC_TEST) $(DEPS) | $(ODIR)
	$(CC) $(CFLAGS)-c -o $@ $< 

$(ODIR)%.o: $(SDIR)%.cpp $(DEPS) | $(ODIR) 
	$(CC) $(CFLAGS) -c -o $@ $<

$(ODIR):
	$(MKDIR_P) $(ODIR)